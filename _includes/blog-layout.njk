    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "{{ title }}",
      "description": "{{ description }}",
      "url": "https://www.foundonchat.com{{ page.url }}",
      "datePublished": "{{ page.date.toISOString() }}",
      "author": {
        "@type": "Organization",
        "name": "FoundOnChat"
