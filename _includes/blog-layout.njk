                <li><a href="/faq.html">FAQ</a></li>
                <li><a href="/blog/">Blog</a></li>
                <li><a href="/contact.html">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="blog-post">
            <h2>{{ title }}</h2>
            <p>Published: {{ page.date | readableDate }}</p>
            <div class="blog-content">
                {{ content | safe }}
            </div>
        </section>
    </main>

